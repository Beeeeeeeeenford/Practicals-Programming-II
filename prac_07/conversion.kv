BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            size_hint_x: None
            width: 450
            text: ''
            font_size: 48
            multiline: False
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                font_size: 24
                on_press: app.handle_up
            Button:
                text: 'Down'
                font_size: 24
                on_press: app.handle_down
    Button:
        text: 'Convert m to km'
        font_size: 32
        on_press: app.handle_convert(int(input_number.text))
    Label:
        id: output_label
        font_size: 48
        color: (1, 1, 1, 1)